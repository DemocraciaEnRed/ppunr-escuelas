header.banner-proyectos
  width: 100%
  height: auto;
  padding: 110px 0px 60px;
  display: flex
  flex-wrap: wrap
  flex-direction: column
  justify-content: center
  align-items: center
  background: linear-gradient(90deg, rgba(140,3,117,1) 0%, rgba(140,3,117,1) 35%, rgba(191,69,136,1) 100%);
  text-align: center
  color: #FFF

  background-size: cover;
  &.fondo-eac {
    background-position: center;
    background-image: url("/ext/lib/site/home-propuestas/fondo-eac.jpg");
  }
  &.fondo-ips {
    background-position: bottom;
    background-image: url("/ext/lib/site/home-propuestas/fondo-ips.jpg");
  }
  &.fondo-esupcom {
    background-position: center;
    background-image: url("/ext/lib/site/home-propuestas/fondo-esupcom.jpg");
  }

  .proyectos-title
    font-family: 'Roboto', sans-serif
    font-size: 40px
    @media screen and (max-width: 570px)
      font-size: 25px
    font-weight: 600
    margin: 0

  .proyectos-subtitle
    font-family: 'Roboto', sans-serif
    font-size: 24px
    font-weight: 600
    @media screen and (max-width: 570px)
          font-size: 18px
          margin: 20px 5 5 0
    font-weight: 300
    letter-spacing: 0.4px
    max-width: 1042px
    margin: 20px 0 0 0

  a.proyectos-button
    color: #4b3c59;
    text-align: center;
    margin-top: 30px;
    box-shadow: 0 4px 4px 0 rgba(255, 255, 255, 0.25);
    &:hover,&:focus
      color:#990070

header.banner-votos
  width: 100%
  height: auto;
  padding: 20px 0px 20px;
  display: flex
  flex-wrap: wrap
  flex-direction: column
  justify-content: center
  align-items: center
  background-color: #6e025c
  background-position: bottom
  text-align: center
  color: #FFF
  z-index: 999

  .votos-title
    font-family: 'Roboto', sans-serif
    font-size: 30px
    @media screen and (max-width: 250px)
      font-size: 25px
    font-weight: 300
    margin: 0
