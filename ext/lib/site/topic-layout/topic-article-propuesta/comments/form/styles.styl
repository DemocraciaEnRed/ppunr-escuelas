.topic-comments-form
  position: relative
  display: flex
  flex-wrap: wrap
  margin-bottom: 30px
  // padding: 15px
  padding: 0;
  z-index: 0
  // box-shadow: 0 1px 3px rgba(0,0,0,.12), 0 1px 2px rgba(0,0,0,.24)
  box-shadow: none
  background-color: transparent
  clear: both

  &.focused
    .comments-create
      width: 100%

  .loader
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: 10
    background-color: rgba(#fff, .9)

  .avatar
    margin-right: 10px
    width: 1.875em
    height: 1.875em

  .name
    flex-grow: 2
    margin: 0 0 1em
    padding: .55em 0
    font-size: .8em
    font-weight: bold
    transition: all .3s

  .comments-create
    flex-grow: 2
    resize: none
    margin: 0
    // padding: .2em 0
    // border: 0
    border: 1px solid #000;
    line-height: 1.6
    font-size: .875em
    font-weight: inherit
    color: inherit
    outline: none
    box-shadow: none
    background-color: #FFF;
    padding: 20px;

  .actions
    margin-top: 1em
    width: 100%
  
  .btn-submit-comment
    background-color: #BF4588;
    color: #FFF;
    font-weight: 700;

  .error
    margin: 0 0 1em 
  
  
