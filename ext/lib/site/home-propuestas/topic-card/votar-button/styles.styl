.votar-button-wrapper
  float: left;
  margin-bottom: 15px;
  .btn
    background: #bf4588
    margin: 0
    border-radius: 5px;
    font-weight: 600
    font-size: 14px
    text-transform: uppercase;
    border: solid 1px #bf4588;
    &.btn-empty
      background: #FFFFFF
      color: #bf4588
      border: solid 2px #bf4588;
    &.btn-filled
      background: #bf4588
      color: #FFFFFF
      &:hover
        background: #FFFFFF
        color: #bf4588
        border: solid 1px #bf4588;
    &.btn-voted
      background: #FFFFFF
      color: #bf4588
      font-weight: 700
      border-color: transparent
      box-shadow:none
      &:hover
        cursor: default;

  .confirmas-voto
    color: #bf4588
    font-weight: bold
    margin-right: 9px;

  .btn-si
    margin-right: 10px;
