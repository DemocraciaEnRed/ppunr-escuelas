    .cause-wrapper, .subscribe-wrapperr, .proyectista-wrapper
      float: left;
      //margin-bottom: 15px;
      .btn
        margin: 0
        border-radius: 5px;
        font-weight: 600
        font-size: 14px
        
        .participants
          font-weight: 400
          display: inline-block
          margin-left: 20px;
          color: #202020
          span
            color: #bf4588

        &.not-voted,&.not-subscribed
          &:hover
            color: #84305f
          .participants
            color: #202020
            .icon-like, .icon-bell
              color: #bf4588

        &.voted,&.subscribed
          .participants
            color: white

      &.cant-vote,&.cant-subscribe
        .btn
          $disabled-color = #656768
          background: white
          color: $disabled-color
          border-color: $disabled-color
          .participants
            color: $disabled-color
            .icon-like, .icon-bell
              color: $disabled-color

  .topic-creation
    font-size: 14px
    margin-bottom: 1em
    margin-top: 0.8em
    display: flex
    align-items: center
    color: #595959

    i
      margin-right: .5em

    .date
      flex: 1
      text-align: right

    .avatar
      margin-right: 5px
      width: 25px
      height: 25px
      border-radius: 50%
      background-size: cover
      background-position: center center

    .topic-card-author
      font-weight: bold
      color: #8c0375
      margin-right: 2px

