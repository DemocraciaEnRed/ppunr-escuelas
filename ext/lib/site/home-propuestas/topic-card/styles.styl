    .buttons-wrapper
      display: flex
      flex-wrap: wrap;
      .btn.btn-go
        margin: 10px;
        width: auto
        border-radius: 32px;
        padding: 8px 20px;
        font-weight: 700;
        background: transparent
        color: #8C0375
        border: 2px solid #8C0375;
        &:hover
          background: #8C0375
          color: #FFF;
          border: 2px solid #8C0375;
          text-decoration: none;

    //.cause-wrapper
    //  margin-right: 20px;
