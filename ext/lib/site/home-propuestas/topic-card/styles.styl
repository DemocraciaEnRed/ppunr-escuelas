#ideas-topic-card
  width: 100%
  margin: 0 0 1.5em
  height: auto
  min-height: unset
  border-radius: 5px;
  box-shadow: 0 5px 7px 0 rgba(0, 0, 0, 0.25);
  border: solid 1px #bab8b8;
  border-left-width: 15px;
  padding: 25px 40px;
  &:hover
    box-shadow: 0 2px 5px #555
  .topic-header-container
    display: flex
    justify-content: space-between
    align-items: flex-start
    .topic-card-title
      color: black
      margin: 0;
      font-weight: 600;
      font-size: 1.2rem;
      text-transform: uppercase;
      &:hover
        text-decoration: underline;
        cursor: pointer;
    .topic-fecha
      color: #bab8b8;
      font-size: 0.9rem;
      margin-left: 20px;

  .topic-number
    font-size 22px
    padding-right: 10px;
    font-weight: bold;

  .topic-card-info
    padding-bottom: 0
    height: auto

  .topic-card-attrs
    span.badge
      background-color: #990070
      font-size: 14px
      border-radius: 35px
      color: #fff
      padding:6px 15px 6px 15px
      font-weight: normal;
      text-decoration: none !important
      margin-right:9px
      margin-bottom: 10px

  .topic-card-description
    margin: 20px 0;
    text-transform: none
    line-height: normal;
    font-size: 0.9rem;
    a
      font-size: 15px
      white-space: normal

  .tags-container
    margin: 30px 0;
    display: flex;
    flex-wrap: wrap;
    span
      padding: 5px 15px;
      margin: 2px 0;
      border-radius: 7px;
      margin-right: 10px;
      color: #000;
      font-size: 0.9rem;
      background-color: #f5f5f5;
  .topic-card-footer
    //padding: 20px 35px
    margin-top: 20px;
    @media screen and (min-width: 769px)
      display: flex;
      justify-content: center;


