.ext-home-ideas
  @import './topic-card/styles'
  @import './filter-propuestas/styles'
  &.user-logged
    @media (max-width: 400px)
      margin-top: 140px
  button
    border: none
    margin-right: .5em

  .more-topics
    width: 100%
    padding: 0 0 20px 0
    text-align: center
    button
      cursor: pointer
      margin: 6px
      width: 180px
      border-radius: 5px
      padding: 0.8rem
      background-color: #099dc3
      color: #fff
      border: none
      font-size: 20px
      text-transform: uppercase

  .notice
    h1
      margin: 0;
      font-size: 1.25rem;
      padding: 0
    margin: -1.5em auto 0em
    padding: 15px 50px;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    background-color: #802983;
    color: white
    text-align: center;
    z-index: 1;
    max-width: 80%;

  .alert-duedate
    display: block
    float:left
    font-size: 0.9em
    color: #666
    margin: 15px
    font-style: italic
    max-width: 345px
    @media screen and (min-width: 600px)
      padding-top:30px

  .topics-container
    background-image: unquote("url('ext/lib/site/home-propuestas/bg-mundo.png')")
    background-repeat: no-repeat
    background-position: center bottom -350px;
    padding-bottom: 350px;
    background-size: contain;
    @media (max-width: 980px)
      background-position: center bottom -200px;
      padding-bottom: 260px
    @media (max-width: 650px)
      background-position: center bottom -150px;
      padding-bottom: 180px
    @media (max-width: 400px)
      background-position: center bottom -80px;

  .topics-title
    font-size: 18px;
    font-weight: 600;
    margin-bottom: 60px
    color: #000
    margin-top: 0
    display: inline-block
    @media (max-width: 500px)
      margin-bottom: 20px
  .topics-filters
    float: right;
    .topics-filter
      display: inline-block;
      float: right;
      &.topics-state-filter
        margin-bottom: 5px
      &.topics-sort-filter
        clear: both;
      @media (max-width: 500px)
        float: none
        margin-bottom: 20px
        span
          margin-bottom: 10px
          display: block
      span
        font-size: 14px;
        font-weight: 600;
        color: #000
        margin-right: 10px
      .btn-sort-filter
        color: #8c1e80;
        font-size: 12px
        font-weight: 500
        padding: 6px 14px
        border: solid 1px #8c1e80;
        margin: 0
        border-top-right-radius: 2px
        border-bottom-right-radius: 2px
        background-color: white
        .glyphicon
          display: none
        &:first-of-type
          border-right: none
          border-top-right-radius: 0
          border-bottom-right-radius: 0
          border-top-left-radius: 2px
          border-bottom-left-radius: 2px
        &.active
          background-color: #f2dcf0;
          font-weight: bold
          .glyphicon
            display: inline
            display: inline;
            margin-right: 5px;
            color: #8c1e80;
            font-size: 12px

  .not-in-escuela-reminder
    text-align: center;
    margin-top: 50px;
    span
      border: solid 1px #bababa;
      background-color: #ffffff;
      color: #000;
      font-weight: 600;
      font-size: 20px;
      padding: 17px 30px;
      display: inline-block;
      i
        margin-right: 10px;
